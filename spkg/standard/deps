	$(SAGE_SPKG) $(NUMPY) 2>&1

$(INST)/$(SCIPY): $(INST)/$(FORTRAN) $(INST)/$(F2C) $(INST)/$(LAPACK) $(INST)/$(BLAS) $(INST)/$(NUMPY)
	$(SAGE_SPKG) $(SCIPY) 2>&1

