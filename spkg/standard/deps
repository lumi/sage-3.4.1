		  $(INST)/$(JINJA)
	$(SAGE_SPKG) $(SAGE) 
	$(MAKEREL)

$(INST)/$(FORTRAN):
	$(SAGE_SPKG) $(FORTRAN) 2>&1

$(INST)/$(JMOL):
	$(SAGE_SPKG) $(JMOL) 2>&1

$(INST)/$(F2C): $(INST)/$(FORTRAN)
	$(SAGE_SPKG) $(INST)/$(F2C) 2>&1 

$(INST)/$(JINJA): $(INST)/$(DOCUTILS) $(INST)/$(SETUPTOOLS)
	$(SAGE_SPKG) $(JINJA) 2>&1

$(INST)/$(LAPACK): $(INST)/$(FORTRAN)
	$(SAGE_SPKG) $(INST)/$(LAPACK) 2>&1 

$(INST)/$(BLAS): $(INST)/$(FORTRAN)
	$(SAGE_SPKG) $(INST)/$(BLAS) 2>&1 

